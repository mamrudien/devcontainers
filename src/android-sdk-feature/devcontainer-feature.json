{
    "name": "Android SDK",
    "id": "android-sdk-feature",
    "version": "0.2.0-alpha",
    "description": "Providing the necessary tools and environment for Android development.",
    "documentationURL": "https://github.com/mamrudien/devcontainers/tree/main/src/android-sdk",
    "options": {
        "commandLineToolsVersion": {
            "type": "string",
            "proposals": [
                "latest",
                "none"
            ],
            "default": "latest",
            "description": "Select or enter a Command Line Tools version"
        }
    },
    "containerEnv": {
        "ANDROID_HOME": "/usr/local/android/sdk",
        "PATH": "/usr/local/android/sdk/cmdline-tools:/usr/local/android/sdk/cmdline-tools/bin:${PATH}"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}